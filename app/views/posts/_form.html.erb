<%# app/views/posts/_form.html.erb %>
<%# アイコン選択式のリッチな投稿フォーム %>
<%= form_with(model: post, local: true, class: "space-y-6", id: "new_post_form") do |f| %>

  <%# エラーメッセージ表示エリア %>
  <% if post.errors.any? %>
    <div class="bg-red-50 dark:bg-red-900/30 text-red-600 dark:text-red-300 p-4 rounded-xl text-sm border border-red-100 dark:border-red-800 animate-pulse">
      <div class="font-bold mb-1 flex items-center gap-2">
        <span class="material-symbols-outlined text-lg">error</span>
        入力内容を確認してください
      </div>
      <ul class="list-disc list-inside ml-1">
        <% post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- 本文入力エリア -->
  <div data-controller="character-counter" data-character-counter-max-value="200">
    <div class="flex justify-between items-center mb-2">
      <%= f.label :body, "ひとことメモ", class: "block text-sm font-bold text-gray-700 dark:text-gray-300" %>
      <span data-character-counter-target="counter" class="text-xs text-gray-400">0 / 200</span>
    </div>
    <div class="relative">
      <%= f.text_area :body, rows: 3,
          class: "w-full rounded-xl border-gray-300 dark:border-gray-600 dark:bg-slate-700 dark:text-white focus:ring-blue-500 focus:border-blue-500 pl-4 pr-4 py-3 shadow-sm resize-none",
          placeholder: "今日の散歩はどうでしたか？",
          "data-character-counter-target": "input",
          "data-action": "input->character-counter#update" %>
      <div class="absolute bottom-3 right-3 text-gray-400 text-xs pointer-events-none">
        <span class="material-symbols-outlined text-lg">edit_note</span>
      </div>
    </div>
  </div>

  <!-- 天気選択（アイコンラジオボタン） -->
  <div>
    <label class="block text-sm font-bold text-gray-700 dark:text-gray-300 mb-3">天気</label>
    <div class="grid grid-cols-5 gap-2">
      <% Post.weathers.keys.each do |weather_key| %>
        <%# postモデルのインスタンスを使って絵文字を取得するためのハック %>
        <% temp_post = Post.new(weather: weather_key) %>
        <label class="cursor-pointer group">
          <%= f.radio_button :weather, weather_key, class: "peer sr-only" %>
          <div class="flex flex-col items-center justify-center p-2 rounded-xl border border-gray-200 dark:border-gray-600 bg-white dark:bg-slate-700 hover:bg-gray-50 dark:hover:bg-slate-600 peer-checked:bg-blue-50 peer-checked:border-blue-500 peer-checked:text-blue-600 dark:peer-checked:bg-blue-900/30 dark:peer-checked:border-blue-400 dark:peer-checked:text-blue-300 transition-all duration-200">
            <span class="text-2xl mb-1 group-hover:scale-110 transition-transform"><%= temp_post.weather_emoji %></span>
            <span class="text-[10px] font-medium text-gray-500 dark:text-gray-400 peer-checked:text-blue-600 dark:peer-checked:text-blue-300"><%= weather_key.humanize %></span>
          </div>
        </label>
      <% end %>
    </div>
  </div>

  <!-- 気分選択（アイコンラジオボタン） -->
  <div>
    <label class="block text-sm font-bold text-gray-700 dark:text-gray-300 mb-3">気分</label>
    <div class="grid grid-cols-5 gap-2">
      <% Post.feelings.keys.each do |feeling_key| %>
        <% temp_post = Post.new(feeling: feeling_key) %>
        <label class="cursor-pointer group">
          <%= f.radio_button :feeling, feeling_key, class: "peer sr-only" %>
          <div class="flex flex-col items-center justify-center p-2 rounded-xl border border-gray-200 dark:border-gray-600 bg-white dark:bg-slate-700 hover:bg-gray-50 dark:hover:bg-slate-600 peer-checked:bg-green-50 peer-checked:border-green-500 peer-checked:text-green-600 dark:peer-checked:bg-green-900/30 dark:peer-checked:border-green-400 dark:peer-checked:text-green-300 transition-all duration-200">
            <span class="text-2xl mb-1 group-hover:scale-110 transition-transform"><%= temp_post.feeling_emoji %></span>
            <span class="text-[10px] font-medium text-gray-500 dark:text-gray-400 peer-checked:text-green-600 dark:peer-checked:text-green-300"><%= feeling_key.humanize %></span>
          </div>
        </label>
      <% end %>
    </div>
  </div>

  <div class="pt-4">
    <%= f.button type: :submit, class: "w-full bg-gradient-to-r from-blue-500 to-cyan-400 hover:from-blue-600 hover:to-cyan-500 text-white font-bold py-3.5 px-4 rounded-xl shadow-lg shadow-blue-500/30 hover:shadow-blue-500/50 transform hover:-translate-y-0.5 transition-all duration-200 flex items-center justify-center gap-2" do %>
      <span class="material-symbols-outlined">send</span>
      投稿する
    <% end %>
  </div>
<% end %>
