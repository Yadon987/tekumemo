<% content_for :title, "てくメモ - ログインスタンプ" %>

<div class="flex-1 p-4 pb-24 w-full max-w-2xl mx-auto space-y-4">
  <!-- ページヘッダー -->
  <div class="bg-gradient-to-br from-purple-400 to-pink-500 dark:from-purple-600 dark:to-pink-700 text-white p-6 rounded-lg shadow-lg">
    <div class="flex items-center space-x-3 mb-2">
      <span class="material-symbols-outlined text-4xl">calendar_month</span>
      <h1 class="text-2xl font-bold">ログインスタンプ</h1>
    </div>
    <p class="text-sm opacity-90">散歩記録をカレンダーで確認しましょう</p>
  </div>

  <!-- 統計情報 -->
  <div class="grid grid-cols-2 gap-4">
    <!-- 今月の散歩日数 -->
    <div class="bg-white dark:bg-gray-800 p-4 rounded-lg shadow-sm border-l-4 border-blue-500 dark:border-blue-600 transition-colors">
      <div class="flex items-center space-x-2 mb-2">
        <span class="material-symbols-outlined text-blue-500 dark:text-blue-400">event_available</span>
        <h3 class="font-bold text-gray-900 dark:text-white">今月</h3>
      </div>
      <p class="text-3xl font-bold text-blue-600 dark:text-blue-400"><%= @monthly_walk_count %><span class="text-base ml-1">日</span></p>
    </div>

    <!-- 連続日数 -->
    <div class="bg-white dark:bg-gray-800 p-4 rounded-lg shadow-sm border-l-4 border-orange-500 dark:border-orange-600 transition-colors">
      <div class="flex items-center space-x-2 mb-2">
        <span class="material-symbols-outlined text-orange-500 dark:text-orange-400">local_fire_department</span>
        <h3 class="font-bold text-gray-900 dark:text-white">連続</h3>
      </div>
      <p class="text-3xl font-bold text-orange-600 dark:text-orange-400"><%= @consecutive_days %><span class="text-base ml-1">日</span></p>
    </div>
  </div>

  <!-- カレンダー -->
  <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm p-4 transition-colors">
    <!-- 月ナビゲーション -->
    <div class="flex justify-between items-center mb-4">
      <!-- 前月ボタン -->
      <%= link_to login_stamps_path(start_date: @start_date - 1.month),
          class: "flex items-center justify-center w-10 h-10 rounded-full bg-gray-100 dark:bg-gray-700 hover:bg-gray-200 dark:hover:bg-gray-600 transition-colors" do %>
        <span class="material-symbols-outlined text-gray-600 dark:text-gray-300">chevron_left</span>
      <% end %>

      <!-- 現在の月を表示 -->
      <h2 class="text-xl font-bold text-gray-900 dark:text-white">
        <%= @start_date.strftime("%Y年%m月") %>
      </h2>

      <!-- 次月ボタン -->
      <%= link_to login_stamps_path(start_date: @start_date + 1.month),
          class: "flex items-center justify-center w-10 h-10 rounded-full bg-gray-100 dark:bg-gray-700 hover:bg-gray-200 dark:hover:bg-gray-600 transition-colors" do %>
        <span class="material-symbols-outlined text-gray-600 dark:text-gray-300">chevron_right</span>
      <% end %>
    </div>

    <!-- カレンダー本体 -->
    <div class="calendar-container">
      <%= month_calendar(attribute: :walked_on, start_date: @start_date, events: @walks) do |date, walks| %>
        <div class="calendar-day">
          <!-- 日付 -->
          <div class="date-number <%= 'other-month' unless date.month == @start_date.month %> <%= 'today' if date == Date.today %>">
            <%= date.day %>
          </div>

          <!-- スタンプ表示（散歩記録がある日） -->
          <% if @walks_by_date[date].present? %>
            <div class="stamp-icon">
              <span class="material-symbols-outlined text-green-500 dark:text-green-400">check_circle</span>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- カレンダーの見方 -->
  <div class="bg-blue-50 dark:bg-blue-900/30 border border-blue-200 dark:border-blue-700 rounded-lg p-4 transition-colors">
    <div class="flex items-start space-x-2">
      <span class="material-symbols-outlined text-blue-500 dark:text-blue-400 text-xl mt-0.5">info</span>
      <div class="flex-1">
        <h3 class="font-bold text-blue-900 dark:text-blue-200 mb-1">カレンダーの見方</h3>
        <ul class="text-sm text-blue-800 dark:text-blue-300 space-y-1">
          <li class="flex items-center space-x-2">
            <span class="material-symbols-outlined text-green-500 dark:text-green-400 text-base">check_circle</span>
            <span>散歩記録がある日</span>
          </li>
          <li>• 前月・次月ボタンで月を切り替えられます</li>
          <li>• 連続日数は今日から過去に向かって計算されます</li>
        </ul>
      </div>
    </div>
  </div>
</div>

<!-- カレンダー用のスタイル -->
<style>
  /* カレンダー全体のコンテナ */
  .calendar-container {
    overflow-x: auto;
  }

  /* simple_calendarのテーブルスタイル */
  .simple-calendar {
    width: 100%;
    border-collapse: collapse;
  }

  /* テーブルヘッダー（曜日） */
  .simple-calendar thead th {
    padding: 0.5rem;
    text-align: center;
    font-weight: 600;
    font-size: 0.875rem;
    color: #4B5563;
    border-bottom: 2px solid #E5E7EB;
  }

  .dark .simple-calendar thead th {
    color: #D1D5DB;
    border-bottom-color: #374151;
  }

  /* 日曜日のヘッダー */
  .simple-calendar thead th:first-child {
    color: #EF4444;
  }

  .dark .simple-calendar thead th:first-child {
    color: #F87171;
  }

  /* 土曜日のヘッダー */
  .simple-calendar thead th:last-child {
    color: #3B82F6;
  }

  .dark .simple-calendar thead th:last-child {
    color: #60A5FA;
  }

  /* カレンダーのセル */
  .simple-calendar td {
    padding: 0;
    border: 1px solid #E5E7EB;
    height: 80px;
    vertical-align: top;
    background-color: white;
  }

  .dark .simple-calendar td {
    border-color: #374151;
    background-color: #1F2937;
  }

  /* カレンダーの日付セルの内容 */
  .calendar-day {
    width: 100%;
    height: 100%;
    padding: 0.5rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
  }

  /* 日付の数字 */
  .date-number {
    font-size: 0.875rem;
    font-weight: 500;
    color: #1F2937;
    width: 100%;
    text-align: center;
  }

  .dark .date-number {
    color: #F3F4F6;
  }

  /* 今日の日付 */
  .date-number.today {
    background-color: #3B82F6;
    color: white;
    border-radius: 9999px;
    width: 1.75rem;
    height: 1.75rem;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto;
  }

  .dark .date-number.today {
    background-color: #60A5FA;
  }

  /* 他の月の日付 */
  .date-number.other-month {
    color: #9CA3AF;
  }

  .dark .date-number.other-month {
    color: #6B7280;
  }

  /* スタンプアイコン */
  .stamp-icon {
    margin-top: auto;
  }

  /* 日曜日の日付 */
  .simple-calendar td:first-child .date-number:not(.other-month) {
    color: #EF4444;
  }

  .dark .simple-calendar td:first-child .date-number:not(.other-month) {
    color: #F87171;
  }

  /* 土曜日の日付 */
  .simple-calendar td:last-child .date-number:not(.other-month) {
    color: #3B82F6;
  }

  .dark .simple-calendar td:last-child .date-number:not(.other-month) {
    color: #60A5FA;
  }

  /* モバイル対応 */
  @media (max-width: 640px) {
    .simple-calendar td {
      height: 60px;
    }

    .calendar-day {
      padding: 0.25rem;
    }

    .date-number {
      font-size: 0.75rem;
    }

    .stamp-icon .material-symbols-outlined {
      font-size: 1.25rem;
    }
  }
</style>
