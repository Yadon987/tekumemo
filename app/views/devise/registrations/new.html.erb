<!-- ページ固有のタイトルを 'application.html.erb' に渡す -->
<% content_for :title, "てくメモ - 新規登録" %>

<div class="flex flex-1 flex-col items-center justify-center p-4">
  <div class="w-full max-w-md">

    <!-- ▼▼▼ フォームの「外」の見出し ▼▼▼ -->
    <div class="mb-8 flex flex-col items-center">
      <div class="mb-4 flex h-20 w-20 items-center justify-center rounded-xl bg-primary">
        <span class="material-symbols-outlined text-5xl text-white">footprint</span>
      </div>
      <!-- 文言を「新規登録」用に変更 -->
      <h1 class="text-3xl font-bold text-[#333333] dark:text-white">ようこそ！</h1>
      <p class="mt-2 text-base text-gray-600 dark:text-gray-400">アカウントを作成して始めましょう</p>
    </div>

    <!-- ▼▼▼ ここからがRailsのフォームヘルパーです ▼▼▼ -->
    <!-- 
      - urlを 'registration_path' に変更
      - バリデーションエラー表示を追加
    -->
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      
      <!-- Deviseのバリデーションエラーメッセージを表示 -->
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="w-full space-y-5">

        <!-- (1) メールアドレス入力 (変更なし) -->
        <div class="flex flex-col">
          <%= f.label :email, "メールアドレス", class: "mb-2 text-base font-medium text-[#333333] dark:text-gray-300" %>
          <div class="relative flex w-full items-center">
            <span class="material-symbols-outlined absolute left-4 text-gray-400 dark:text-gray-500">mail</span>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス", class: "form-input h-14 w-full rounded-lg border border-gray-300 bg-white p-4 pl-12 text-base text-[#333333] placeholder-gray-400 focus:border-primary focus:outline-none focus:ring-1 focus:ring-primary dark:border-gray-600 dark:bg-gray-800 dark:text-white dark:placeholder-gray-500 dark:focus:border-primary" %>
          </div>
        </div>

        <!-- (2) パスワード入力 -->
        <div class="flex flex-col">
          <%= f.label :password, "パスワード", class: "mb-2 text-base font-medium text-[#333333] dark:text-gray-300" %>
          <!-- パスワードの最低文字数を表示 (設定がある場合) -->
          <% if @minimum_password_length %>
            <em class="text-xs text-gray-500 dark:text-gray-400 mb-1">(<%= @minimum_password_length %>文字以上)</em>
          <% end %>
          <div class="relative flex w-full items-center">
            <span class="material-symbols-outlined absolute left-4 text-gray-400 dark:text-gray-500">lock</span>
            <!-- autocomplete を "new-password" に変更 -->
            <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワード", class: "form-input h-14 w-full rounded-lg border border-gray-300 bg-white p-4 pl-12 pr-12 text-base text-[#333333] placeholder-gray-400 focus:border-primary focus:outline-none focus:ring-1 focus:ring-primary dark:border-gray-600 dark:bg-gray-800 dark:text-white dark:placeholder-gray-500 dark:focus:border-primary" %>
            <button class="absolute right-4 text-gray-400 dark:text-gray-500" type="button">
              <span class="material-symbols-outlined">visibility</span>
            </button>
          </div>
        </div>
        
        <!-- (3) パスワード（確認用）入力 ※新規追加 -->
        <div class="flex flex-col">
          <%= f.label :password_confirmation, "パスワード（確認用）", class: "mb-2 text-base font-medium text-[#333333] dark:text-gray-300" %>
          <div class="relative flex w-full items-center">
            <span class="material-symbols-outlined absolute left-4 text-gray-400 dark:text-gray-500">lock</span>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワード（確認用）", class: "form-input h-14 w-full rounded-lg border border-gray-300 bg-white p-4 pl-12 pr-12 text-base text-[#333333] placeholder-gray-400 focus:border-primary focus:outline-none focus:ring-1 focus:ring-primary dark:border-gray-600 dark:bg-gray-800 dark:text-white dark:placeholder-gray-500 dark:focus:border-primary" %>
            <button class="absolute right-4 text-gray-400 dark:text-gray-500" type="button">
              <span class="material-symbols-outlined">visibility</span>
            </button>
          </div>
        </div>

        <!-- 
          "ログインしたままにする" は新規登録画面には不要なため削除
          "パスワードをお忘れですか？" もここでは不要なため削除 (下のリンクで代替)
        -->

        <!-- (4) "登録する" 送信ボタン -->
        <div>
          <!-- value を "登録する" に変更 -->
          <%= f.submit "登録する", class: "flex h-14 w-full cursor-pointer items-center justify-center overflow-hidden rounded-full bg-primary text-base font-bold text-white transition-colors hover:bg-green-600" %>
        </div>

      </div>
    <% end %>

    <!-- "または" の区切り (変更なし) -->
    <div class="my-8 flex items-center justify-center">
      <span class="h-px flex-grow bg-gray-300 dark:bg-gray-700"></span>
      <span class="mx-4 text-sm text-gray-500 dark:text-gray-400">または</span>
      <span class="h-px flex-grow bg-gray-300 dark:bg-gray-700"></span>
    </div>
    
    <!-- Googleログイン (変更なし) -->
    <button class="flex h-14 w-full cursor-pointer items-center justify-center overflow-hidden rounded-lg border border-gray-300 bg-white text-base font-medium text-[#333333] transition-colors hover:bg-gray-50 dark:border-gray-600 dark:bg-gray-800 dark:text-white dark:hover:bg-gray-700">
      <svg class="mr-3 h-6 w-6" viewBox="0 0 48 48">
        <path d="M43.611,20.083H42V20H24v8h11.303c-1.649,4.657-6.08,8-11.303,8c-6.627,0-12-5.373-12-12s5.373-12,12-12c3.059,0,5.842,1.154,7.961,3.039l5.657-5.657C34.046,6.053,29.268,4,24,4C12.955,4,4,12.955,4,24s8.955,20,20,20s20-8.955,20-20C44,22.659,43.862,21.35,43.611,20.083z" fill="#FFC107"></path>
        <path d="M6.306,14.691l6.571,4.819C14.655,15.108,18.961,12,24,12c3.059,0,5.842,1.154,7.961,3.039l5.657-5.657C34.046,6.053,29.268,4,24,4C16.318,4,9.656,8.337,6.306,14.691z" fill="#FF3D00"></path>
        <path d="M24,44c5.166,0,9.86-1.977,13.409-5.192l-6.19-5.238C29.211,35.091,26.715,36,24,36c-5.202,0-9.619-3.317-11.283-7.946l-6.522,5.025C9.505,39.556,16.227,44,24,44z" fill="#4CAF50"></path>
        <path d="M43.611,20.083H42V20H24v8h11.303c-0.792,2.237-2.231,4.166-4.087,5.571l6.19,5.238C41.38,36.43,44,30.63,44,24C44,22.659,43.862,21.35,43.611,20.083z" fill="#1976D2"></path>
      </svg>
      <span class="truncate">Googleで登録</span> <!-- 文言を微調整 -->
    </button>
    
    <!-- 導線を「ログイン」に変更 -->
    <p class="mt-8 text-center text-base text-gray-600 dark:text-gray-400">
      すでにアカウントをお持ちですか？
      <% if devise_mapping.recoverable? %>
        <%= link_to "ログイン", new_session_path(resource_name), class: "font-medium text-primary hover:underline" %>
      <% end %>
    </p>

    <!-- 
      Deviseの共通リンク (確認メール、ロック解除など) 
      必要に応じて 'devise/shared/links' パーシャルをここで読み込みます
    -->
    <%#= render "devise/shared/links" %>

  </div>
</div>
<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
