<% content_for :title, "散歩記録一覧 - てくメモ" %>

<div class="flex-1 p-4 pb-24 w-full max-w-2xl mx-auto">
  <!-- ページタイトル -->
  <div class="mb-6 flex items-center justify-between">
    <div>
      <h1 class="text-2xl font-bold text-gray-900 dark:text-white flex items-center space-x-2">
        <span class="material-symbols-outlined text-3xl text-transparent bg-clip-text bg-gradient-to-r from-blue-500 to-cyan-500 drop-shadow-sm">footprint</span>
        <span class="text-transparent bg-clip-text bg-gradient-to-r from-gray-800 to-gray-600 dark:from-white dark:to-gray-300 drop-shadow-sm">散歩記録</span>
      </h1>
      <p class="text-sm text-gray-500 dark:text-gray-400 mt-1 ml-1">あなたの散歩記録の一覧です</p>
    </div>
  </div>

  <!-- 新規作成ボタン -->
  <div class="mb-8">
    <%= link_to new_walk_path,
        class: "w-full sm:w-auto inline-flex items-center justify-center space-x-2 bg-gradient-to-r from-orange-400 to-pink-500 hover:from-orange-500 hover:to-pink-600 text-white font-bold py-3 px-6 rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-0.5" do %>
      <span class="material-symbols-outlined text-shadow">add</span>
      <span class="text-shadow">新しい散歩記録を作成</span>
    <% end %>
  </div>

  <!-- 散歩記録一覧 -->
  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
    <% if @walks.any? %>
      <% @walks.each do |walk| %>
        <!-- 各散歩記録カード -->
        <%= link_to walk_path(walk), class: "block group" do %>
          <div class="h-full bg-gradient-to-br from-cyan-400 to-blue-500 dark:from-cyan-600 dark:to-blue-700 rounded-2xl shadow-lg p-5 text-white transition-all duration-300 hover:shadow-xl hover:scale-[1.01] relative overflow-hidden">
            <!-- 装飾用背景 -->
            <div class="absolute top-0 right-0 -mr-8 -mt-8 w-32 h-32 bg-white/10 rounded-full blur-2xl pointer-events-none group-hover:bg-white/20 transition-colors duration-300"></div>

            <!-- 日付と曜日 -->
            <div class="flex items-center justify-between mb-4 relative z-10">
              <div class="flex items-center space-x-2">
                <span class="material-symbols-outlined text-white drop-shadow-md">calendar_today</span>
                <span class="text-lg font-bold text-shadow">
                  <%= walk.walked_on.strftime('%Y年%m月%d日') %>
                </span>
              </div>
              <span class="text-sm font-bold bg-white/20 px-2 py-1 rounded-lg backdrop-blur-sm text-shadow">
                <%= %w[日 月 火 水 木 金 土][walk.walked_on.wday] %>
              </span>
            </div>

            <!-- 場所 -->
            <div class="flex items-center space-x-2 mb-4 relative z-10">
              <span class="material-symbols-outlined text-white/90 drop-shadow-md text-xl">location_on</span>
              <span class="font-bold text-shadow line-clamp-1"><%= walk.location %></span>
            </div>

            <!-- 統計情報グリッド -->
            <div class="grid grid-cols-2 gap-3 mb-2 relative z-10">
              <!-- 距離 -->
              <% if walk.distance.present? %>
                <div class="bg-white/10 rounded-xl p-2 backdrop-blur-sm">
                  <div class="flex items-center space-x-1 mb-1">
                    <span class="material-symbols-outlined text-white text-sm drop-shadow-md">straighten</span>
                    <span class="text-xs text-white/90 text-shadow">距離</span>
                  </div>
                  <p class="text-lg font-bold text-shadow text-right">
                    <%= walk.distance %><span class="text-xs font-normal ml-0.5">km</span>
                  </p>
                </div>
              <% end %>

              <!-- 時間 -->
              <% if walk.duration.present? %>
                <div class="bg-white/10 rounded-xl p-2 backdrop-blur-sm">
                  <div class="flex items-center space-x-1 mb-1">
                    <span class="material-symbols-outlined text-white text-sm drop-shadow-md">schedule</span>
                    <span class="text-xs text-white/90 text-shadow">時間</span>
                  </div>
                  <p class="text-lg font-bold text-shadow text-right">
                    <%= walk.duration %><span class="text-xs font-normal ml-0.5">分</span>
                  </p>
                </div>
              <% end %>

              <!-- 歩数 -->
              <% if walk.steps.present? %>
                <div class="bg-white/10 rounded-xl p-2 backdrop-blur-sm">
                  <div class="flex items-center space-x-1 mb-1">
                    <span class="material-symbols-outlined text-white text-sm drop-shadow-md">directions_walk</span>
                    <span class="text-xs text-white/90 text-shadow">歩数</span>
                  </div>
                  <p class="text-lg font-bold text-shadow text-right">
                    <%= walk.steps.to_s.gsub(/(\d)(?=(\d{3})+(?!\d))/, '\1,') %><span class="text-xs font-normal ml-0.5">歩</span>
                  </p>
                </div>
              <% end %>

              <!-- カロリー -->
              <% if walk.calories_burned.present? %>
                <div class="bg-white/10 rounded-xl p-2 backdrop-blur-sm">
                  <div class="flex items-center space-x-1 mb-1">
                    <span class="material-symbols-outlined text-white text-sm drop-shadow-md">local_fire_department</span>
                    <span class="text-xs text-white/90 text-shadow">kcal</span>
                  </div>
                  <p class="text-lg font-bold text-shadow text-right">
                    <%= walk.calories_burned %>
                  </p>
                </div>
              <% end %>
            </div>

            <!-- メモ（あれば） -->
            <% if walk.notes.present? %>
              <div class="mt-3 pt-3 border-t border-white/20 relative z-10">
                <p class="text-xs text-white/90 line-clamp-1 text-shadow">
                  <span class="material-symbols-outlined text-[10px] align-middle mr-1">edit_note</span>
                  <%= walk.notes %>
                </p>
              </div>
            <% end %>
          </div>
        <% end %>
      <% end %>
    <% else %>
      <!-- 記録がない場合のメッセージ -->
      <div class="col-span-1 md:col-span-2 bg-white dark:bg-gray-800 p-8 rounded-2xl shadow-md text-center border border-gray-100 dark:border-gray-700">
        <div class="bg-gray-100 dark:bg-gray-700 w-20 h-20 rounded-full flex items-center justify-center mx-auto mb-4">
          <span class="material-symbols-outlined text-4xl text-gray-400 dark:text-gray-500">hiking</span>
        </div>
        <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-2">まだ散歩記録がありません</h3>
        <p class="text-gray-500 dark:text-gray-400 mb-6 text-sm">最初の散歩に出かけて、記録を残してみましょう！</p>
        <%= link_to new_walk_path,
            class: "inline-flex items-center space-x-2 text-sky-500 dark:text-sky-400 hover:text-sky-600 dark:hover:text-sky-300 font-bold transition-colors" do %>
          <span class="material-symbols-outlined">arrow_forward</span>
          <span>最初の記録を作成する</span>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
