<% content_for :title, "散歩記録一覧 - てくメモ" %>

<div class="flex-1 p-4 pb-24 w-full max-w-2xl mx-auto">
  <!-- ページタイトル -->
  <div class="mb-8 flex items-center justify-between">
    <div>
      <h1 class="text-3xl font-bold text-gray-900 dark:text-white flex items-center space-x-3">
        <span class="material-symbols-outlined text-4xl text-sky-500 dark:text-cyan-400 drop-shadow-sm dark:drop-shadow-[0_0_10px_rgba(34,211,238,0.8)] animate-bounce-slow">footprint</span>
        <span class="text-transparent bg-clip-text bg-gradient-to-r from-sky-500 to-blue-600 dark:from-cyan-300 dark:to-purple-400 drop-shadow-sm">散歩記録</span>
      </h1>
      <p class="text-sm text-sky-600/80 dark:text-slate-400 mt-1 ml-1 font-medium">あなたの足跡、青空の下で。</p>
    </div>
  </div>

  <!-- 新規作成ボタン -->
  <div class="mb-10">
    <%= link_to new_walk_path,
        class: "group w-full sm:w-auto inline-flex items-center justify-center space-x-2 bg-gradient-to-r from-sky-400 to-blue-500 dark:from-fuchsia-600 dark:to-purple-600 hover:from-sky-500 hover:to-blue-600 dark:hover:from-fuchsia-500 dark:hover:to-purple-500 text-white font-bold py-4 px-8 rounded-full shadow-lg shadow-sky-200 dark:shadow-[0_0_20px_rgba(192,38,211,0.5)] hover:shadow-xl hover:shadow-sky-300 dark:hover:shadow-[0_0_30px_rgba(192,38,211,0.7)] transition-all duration-300 transform hover:-translate-y-1" do %>
      <span class="material-symbols-outlined text-2xl group-hover:rotate-90 transition-transform duration-300">add</span>
      <span class="text-lg">新しい散歩を記録する</span>
    <% end %>
  </div>

  <!-- ページネーション（上部） -->
  <div class="mb-4 flex justify-center">
    <%= paginate @walks %>
  </div>

  <!-- 散歩記録一覧 -->
  <div class="grid grid-cols-1 gap-6">
    <% if @walks.any? %>
      <% @walks.each do |walk| %>
        <!-- 各散歩記録カード -->
        <%= link_to walk_path(walk), class: "block group relative" do %>
          <div class="relative overflow-hidden bg-gradient-to-br from-sky-100 to-blue-100 dark:from-slate-900/90 dark:to-indigo-950/90 backdrop-blur-xl border border-sky-100 dark:border-cyan-500/30 rounded-3xl shadow-lg shadow-sky-100/50 dark:shadow-[0_0_15px_rgba(6,182,212,0.15)] p-6 transition-all duration-300 hover:shadow-xl hover:shadow-sky-200/50 hover:dark:shadow-[0_0_30px_rgba(6,182,212,0.4)] hover:scale-[1.02] hover:dark:border-cyan-400/50">

            <!-- 装飾用背景（青空の光 / ネオンの光） -->
            <div class="absolute -top-10 -right-10 w-40 h-40 bg-sky-200/30 dark:bg-purple-500/20 rounded-full blur-3xl pointer-events-none group-hover:bg-sky-300/30 dark:group-hover:bg-purple-500/30 transition-colors duration-300"></div>

            <!-- 雲のイラスト（ライトモードのみ） -->
            <div class="absolute inset-0 flex items-center justify-center pointer-events-none z-0 dark:hidden">
              <span class="material-symbols-outlined text-[200px] text-white/40 select-none">cloud</span>
            </div>

            <!-- ヘッダー部分（日付・曜日） -->
            <div class="flex items-center justify-between mb-4 relative z-10">
              <div class="flex items-center space-x-3">
                <div class="bg-sky-100 dark:bg-slate-800/80 p-2 rounded-full text-sky-600 dark:text-cyan-400 dark:shadow-[0_0_10px_rgba(34,211,238,0.3)]">
                  <span class="material-symbols-outlined text-xl">calendar_month</span>
                </div>
                <div>
                  <p class="text-lg font-bold text-gray-800 dark:text-slate-100">
                    <%= walk.walked_on.strftime('%Y年%m月%d日') %>
                  </p>
                  <p class="text-xs text-sky-500 dark:text-cyan-400 font-bold">
                    <%= %w[日 月 火 水 木 金 土][walk.walked_on.wday] %>曜日
                  </p>
                </div>
              </div>

              <!-- 詳細へ矢印 -->
              <span class="material-symbols-outlined text-gray-300 dark:text-slate-600 group-hover:text-sky-500 dark:group-hover:text-cyan-400 transition-colors duration-300">arrow_forward_ios</span>
            </div>

            <!-- 場所 -->
            <div class="flex items-center space-x-2 mb-6 relative z-10 pl-1">
              <span class="material-symbols-outlined text-sky-400 dark:text-purple-400">location_on</span>
              <span class="font-bold text-gray-600 dark:text-slate-300 line-clamp-1"><%= walk.location %></span>
            </div>

            <!-- スタッツグリッド（雲のようなふわっとした背景 / サイバーなパネル） -->
            <div class="grid grid-cols-4 gap-2 relative z-10">
              <!-- 距離 -->
              <div class="flex flex-col items-center justify-center p-2 bg-white/60 dark:bg-slate-950/50 rounded-2xl border border-sky-50 dark:border-cyan-500/20 shadow-sm">
                <span class="text-xs text-gray-400 dark:text-cyan-200/70 font-bold mb-1">距離</span>
                <span class="font-bold text-sky-600 dark:text-cyan-300 dark:drop-shadow-[0_0_5px_rgba(34,211,238,0.5)] text-lg">
                  <%= walk.distance || 0 %><span class="text-xs ml-0.5">km</span>
                </span>
              </div>
              <!-- 時間 -->
              <div class="flex flex-col items-center justify-center p-2 bg-white/60 dark:bg-slate-950/50 rounded-2xl border border-sky-50 dark:border-cyan-500/20 shadow-sm">
                <span class="text-xs text-gray-400 dark:text-cyan-200/70 font-bold mb-1">時間</span>
                <span class="font-bold text-sky-600 dark:text-cyan-300 dark:drop-shadow-[0_0_5px_rgba(34,211,238,0.5)] text-lg">
                  <%= walk.duration || 0 %><span class="text-xs ml-0.5">分</span>
                </span>
              </div>
              <!-- 歩数 -->
              <div class="flex flex-col items-center justify-center p-2 bg-white/60 dark:bg-slate-950/50 rounded-2xl border border-sky-50 dark:border-cyan-500/20 shadow-sm">
                <span class="text-xs text-gray-400 dark:text-cyan-200/70 font-bold mb-1">歩数</span>
                <span class="font-bold text-sky-600 dark:text-cyan-300 dark:drop-shadow-[0_0_5px_rgba(34,211,238,0.5)] text-lg">
                  <%= number_with_delimiter(walk.steps || 0) %>
                </span>
              </div>
              <!-- カロリー -->
              <div class="flex flex-col items-center justify-center p-2 bg-white/60 dark:bg-slate-950/50 rounded-2xl border border-sky-50 dark:border-cyan-500/20 shadow-sm">
                <span class="text-xs text-gray-400 dark:text-cyan-200/70 font-bold mb-1">カロリー</span>
                <span class="font-bold text-sky-600 dark:text-cyan-300 dark:drop-shadow-[0_0_5px_rgba(34,211,238,0.5)] text-lg">
                  <%= walk.calories_burned || 0 %>
                </span>
              </div>
            </div>

            <!-- メモ（あれば） -->
            <% if walk.notes.present? %>
              <div class="mt-4 pt-3 border-t border-sky-100 dark:border-white/10 relative z-10">
                <div class="flex items-start space-x-2 text-gray-500 dark:text-slate-400">
                  <span class="material-symbols-outlined text-sm mt-0.5 text-sky-400 dark:text-purple-400">edit_note</span>
                  <p class="text-sm line-clamp-1"><%= walk.notes %></p>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
      <% end %>

    <!-- ページネーション -->
    <div class="mt-8 flex justify-center">
      <%= paginate @walks %>
    </div>

    <% else %>
      <!-- 記録がない場合のメッセージ -->
      <div class="col-span-1 bg-gradient-to-br from-white to-sky-50 dark:from-slate-900 dark:to-indigo-950 p-10 rounded-3xl shadow-lg border border-sky-100 dark:border-cyan-500/30 text-center">
        <div class="bg-sky-100 dark:bg-slate-800/50 w-24 h-24 rounded-full flex items-center justify-center mx-auto mb-6 animate-pulse-slow dark:shadow-[0_0_20px_rgba(6,182,212,0.3)]">
          <span class="material-symbols-outlined text-5xl text-sky-500 dark:text-cyan-400 dark:drop-shadow-[0_0_10px_rgba(34,211,238,0.8)]">hiking</span>
        </div>
        <h3 class="text-xl font-bold text-gray-800 dark:text-white mb-3">さあ、冒険に出かけよう！</h3>
        <p class="text-gray-500 dark:text-gray-400 mb-8 text-sm leading-relaxed">
          まだ散歩の記録がありません。<br>
          最初の足跡を刻んで、思い出を作りませんか？
        </p>
        <%= link_to new_walk_path,
            class: "inline-flex items-center space-x-2 bg-sky-500 hover:bg-sky-600 dark:bg-cyan-600 dark:hover:bg-cyan-500 text-white font-bold py-3 px-6 rounded-full shadow-md dark:shadow-[0_0_15px_rgba(6,182,212,0.4)] transition-all duration-300 transform hover:scale-105" do %>
          <span class="material-symbols-outlined">arrow_forward</span>
          <span>最初の記録を作成する</span>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
