<%# app/views/walks/_form.html.erb %>
<%# Google Fit JSの「Stimulus化」  by Gemini3 %>

<div data-controller="google-fit" class="w-full max-w-4xl mx-auto">

  <div class="mb-8 p-6 bg-white/20 backdrop-blur-md rounded-2xl border border-white/30 shadow-lg">
    <div class="flex items-center justify-between mb-4">
      <div class="flex items-center space-x-3">
        <span class="material-symbols-outlined text-white text-2xl drop-shadow-md">fitness_center</span>
        <h3 class="text-lg font-bold text-white text-shadow">Google Fitからデータを取得</h3>
      </div>
      <span data-google-fit-target="status" class="text-sm font-bold text-white/90 text-shadow bg-black/10 px-3 py-1 rounded-full empty:hidden"></span>
    </div>

    <% if current_user.google_token_valid? %>
      <button type="button"
              data-google-fit-target="button"
              data-action="click->google-fit#fetch"
              class="w-full bg-white/95 hover:bg-white text-blue-600 font-bold py-3 px-6 rounded-xl shadow-md hover:shadow-lg transition-all transform hover:-translate-y-0.5 flex items-center justify-center space-x-2 ring-4 ring-transparent focus:ring-blue-300">
        <span class="material-symbols-outlined">download</span>
        <span>散歩日のデータを取得</span>
      </button>
      <p class="text-sm text-white/90 mt-3 pl-1 text-shadow flex items-center">
        <span class="material-symbols-outlined text-sm mr-1">info</span>
        こちらはGoogleアカウント連携済みの方限定の機能です
      </p>
      <p class="text-sm text-white/90 mt-1 pl-1 text-shadow flex items-center">
        <span class="material-symbols-outlined text-sm mr-1">check_circle</span>
        選択した日付のGoogle Fitデータを自動でフォームに入力します
      </p>

    <% else %>
      <%= button_to user_google_oauth2_omniauth_authorize_path,
          method: :post,
          # 【重要】Turboを無効化設定をフォーム側に付与
          form: { data: { turbo: false }, class: "w-full" },
          class: "w-full bg-white hover:bg-gray-50 text-gray-700 font-bold py-3 px-6 rounded-xl shadow-md hover:shadow-lg transition-all transform hover:-translate-y-0.5 flex items-center justify-center space-x-2" do %>

        <svg class="w-5 h-5" viewBox="0 0 24 24">
          <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
          <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
          <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
          <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
        </svg>
        <span>Googleアカウントで連携</span>
      <% end %>

      <div class="mt-3 space-y-1">
        <p class="text-sm text-white/90 pl-1 text-shadow">
          ・こちらはGoogleアカウント連携済みの方限定の機能です
        </p>
        <p class="text-sm text-white/90 pl-1 text-shadow">
          ・選択した日付のGoogle Fitデータを自動でフォームに入力します
        </p>
      </div>
    <% end %>
  </div>


  <% if walk.errors.any? %>
    <div class="bg-red-100/95 border-l-4 border-red-500 text-red-700 px-4 py-3 rounded shadow-md mb-6 animate-pulse">
      <h3 class="font-bold flex items-center">
        <span class="material-symbols-outlined mr-2">error</span>
        入力内容に <%= pluralize(walk.errors.count, "件") %> のエラーがあります
      </h3>
      <ul class="list-disc list-inside mt-2 ml-2 space-y-1 text-sm">
        <% walk.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <%= form_with(model: walk, class: "space-y-6") do |form| %>

    <div>
      <%= form.label :walked_on, "散歩日", class: "block text-sm font-bold text-white text-shadow mb-2" %>
      <div class="relative group">
        <span class="material-symbols-outlined absolute left-3 top-1/2 -translate-y-1/2 text-gray-500 group-focus-within:text-sky-500 transition-colors">calendar_today</span>
        <%= form.date_field :walked_on,
            id: "walk_walked_on",
            data: { google_fit_target: "date" },
            class: "w-full pl-10 pr-4 py-3 border-0 rounded-xl focus:ring-2 focus:ring-sky-400 bg-white/95 text-gray-800 shadow-inner transition-all cursor-pointer hover:bg-white" %>
      </div>
    </div>

    <div>
      <%= form.label :location, "場所（任意）", class: "block text-sm font-bold text-white text-shadow mb-2" %>
      <div class="relative group">
        <span class="material-symbols-outlined absolute left-3 top-1/2 -translate-y-1/2 text-gray-500 group-focus-within:text-sky-500 transition-colors">location_on</span>
        <%= form.text_field :location,
            placeholder: "例: 代々木公園",
            class: "w-full pl-10 pr-4 py-3 border-0 rounded-xl focus:ring-2 focus:ring-sky-400 bg-white/95 text-gray-800 placeholder-gray-400 shadow-inner transition-all" %>
      </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <div>
        <%# ▼ labelにブロックを渡して、文字とバッジを自由に配置します %>
        <%= form.label :distance, class: "flex items-center text-sm font-bold text-white text-shadow mb-2" do %>
          <span>距離（km）</span>
          <span class="ml-2 bg-red-600 text-white text-[12px] px-2 py-0.5 rounded-full shadow-sm">必須</span>
        <% end %>

        <div class="relative group">
          <span class="material-symbols-outlined absolute left-3 top-1/2 -translate-y-1/2 text-gray-500 group-focus-within:text-sky-500 transition-colors">route</span>
          <%= form.number_field :distance,
              id: "walk_distance",
              step: 0.01,
              data: { google_fit_target: "distance" },
              placeholder: "例: 5.0",
              class: "w-full pl-10 pr-4 py-3 border-0 rounded-xl focus:ring-2 focus:ring-sky-400 bg-white/95 text-gray-800 placeholder-gray-400 shadow-inner transition-all" %>
        </div>
      </div>

      <div>
        <%# ▼ 時間の方も同様に修正 %>
        <%= form.label :duration, class: "flex items-center text-sm font-bold text-white text-shadow mb-2" do %>
          <span>時間（分）</span>
          <span class="ml-2 bg-red-600 text-white text-[12px] px-2 py-0.5 rounded-full shadow-sm">必須</span>
        <% end %>

        <div class="relative group">
          <span class="material-symbols-outlined absolute left-3 top-1/2 -translate-y-1/2 text-gray-500 group-focus-within:text-sky-500 transition-colors">schedule</span>
          <%= form.number_field :duration,
              id: "walk_duration",
              data: { google_fit_target: "duration" },
              placeholder: "例: 60",
              class: "w-full pl-10 pr-4 py-3 border-0 rounded-xl focus:ring-2 focus:ring-sky-400 bg-white/95 text-gray-800 placeholder-gray-400 shadow-inner transition-all" %>
        </div>
      </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <div>
        <%= form.label :steps, "歩数（任意）", class: "block text-sm font-bold text-white text-shadow mb-2" %>
        <div class="relative group">
          <span class="material-symbols-outlined absolute left-3 top-1/2 -translate-y-1/2 text-gray-500 group-focus-within:text-sky-500 transition-colors">directions_walk</span>
          <%= form.number_field :steps,
              id: "walk_steps",
              data: { google_fit_target: "steps" },
              placeholder: "例: 8000",
              class: "w-full pl-10 pr-4 py-3 border-0 rounded-xl focus:ring-2 focus:ring-sky-400 bg-white/95 text-gray-800 placeholder-gray-400 shadow-inner transition-all" %>
        </div>
      </div>

      <div>
        <%= form.label :calories_burned, "消費kcal（任意）", class: "block text-sm font-bold text-white text-shadow mb-2" %>
        <div class="relative group">
          <span class="material-symbols-outlined absolute left-3 top-1/2 -translate-y-1/2 text-gray-500 group-focus-within:text-sky-500 transition-colors">local_fire_department</span>
          <%= form.number_field :calories_burned,
              id: "walk_calories_burned",
              data: { google_fit_target: "calories" },
              placeholder: "例: 300",
              class: "w-full pl-10 pr-4 py-3 border-0 rounded-xl focus:ring-2 focus:ring-sky-400 bg-white/95 text-gray-800 placeholder-gray-400 shadow-inner transition-all" %>
        </div>
      </div>
    </div>

    <div>
      <%= form.label :notes, "メモ（任意）", class: "block text-sm font-bold text-white text-shadow mb-2" %>
      <%= form.text_area :notes,
          rows: 5,
          placeholder: "今日の散歩の感想や気づいたことを記録しましょう...",
          class: "w-full px-4 py-3 border-0 rounded-xl focus:ring-2 focus:ring-sky-400 bg-white/95 text-gray-800 placeholder-gray-400 shadow-inner transition-all resize-none" %>
    </div>

    <div class="flex flex-col sm:flex-row gap-3 pt-4">
      <%= form.submit "散歩記録を保存", class: "flex-1 bg-gradient-to-r from-orange-400 to-pink-500 hover:from-orange-500 hover:to-pink-600 text-white font-bold py-3 px-6 rounded-xl shadow-lg hover:shadow-xl transition-all transform hover:-translate-y-0.5 cursor-pointer text-shadow" %>

      <%= link_to "キャンセル", walks_path,
          class: "flex-1 text-center bg-white/20 hover:bg-white/30 text-white font-bold py-3 px-6 rounded-xl shadow-md backdrop-blur-sm transition-all text-shadow" %>
    </div>

  <% end %>
</div>
