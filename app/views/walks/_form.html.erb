<!-- フォームのエラーメッセージ表示 -->
<% if walk.errors.any? %>
  <div class="bg-red-100 dark:bg-red-900/30 border border-red-400 dark:border-red-600 text-red-700 dark:text-red-300 px-4 py-3 rounded-lg mb-6">
    <h3 class="font-bold mb-2">
      <%= pluralize(walk.errors.count, "件") %>のエラーがあります:
    </h3>
    <ul class="list-disc list-inside space-y-1">
      <% walk.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<!-- 散歩記録フォーム -->
<%= form_with(model: walk, local: true, class: "space-y-6") do |form| %>

  <!-- 散歩日 -->
  <div>
    <%= form.label :walked_on, "散歩日", class: "block text-sm font-bold text-gray-700 dark:text-gray-300 mb-2" %>
    <div class="relative">
      <span class="material-symbols-outlined absolute left-3 top-1/2 -translate-y-1/2 text-gray-400 dark:text-gray-500">calendar_today</span>
      <%= form.date_field :walked_on,
          class: "w-full pl-10 pr-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-sky-500 focus:border-transparent bg-white dark:bg-gray-700 text-gray-900 dark:text-white transition-colors" %>
    </div>
  </div>

  <!-- 場所 -->
  <div>
    <%= form.label :location, "場所", class: "block text-sm font-bold text-gray-700 dark:text-gray-300 mb-2" %>
    <div class="relative">
      <span class="material-symbols-outlined absolute left-3 top-1/2 -translate-y-1/2 text-gray-400 dark:text-gray-500">location_on</span>
      <%= form.text_field :location,
          placeholder: "例: 代々木公園",
          class: "w-full pl-10 pr-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-sky-500 focus:border-transparent bg-white dark:bg-gray-700 text-gray-900 dark:text-white placeholder-gray-400 dark:placeholder-gray-500 transition-colors" %>
    </div>
  </div>

  <!-- 距離と時間を2列に配置 -->
  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
    <!-- 距離 -->
    <div>
      <%= form.label :distance, "距離（km）", class: "block text-sm font-bold text-gray-700 dark:text-gray-300 mb-2" %>
      <div class="relative">
        <span class="material-symbols-outlined absolute left-3 top-1/2 -translate-y-1/2 text-gray-400 dark:text-gray-500">straighten</span>
        <%= form.number_field :distance,
            step: 0.01,
            placeholder: "例: 5.0",
            class: "w-full pl-10 pr-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-sky-500 focus:border-transparent bg-white dark:bg-gray-700 text-gray-900 dark:text-white placeholder-gray-400 dark:placeholder-gray-500 transition-colors" %>
      </div>
    </div>

    <!-- 時間 -->
    <div>
      <%= form.label :duration, "時間（分）", class: "block text-sm font-bold text-gray-700 dark:text-gray-300 mb-2" %>
      <div class="relative">
        <span class="material-symbols-outlined absolute left-3 top-1/2 -translate-y-1/2 text-gray-400 dark:text-gray-500">schedule</span>
        <%= form.number_field :duration,
            placeholder: "例: 60",
            class: "w-full pl-10 pr-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-sky-500 focus:border-transparent bg-white dark:bg-gray-700 text-gray-900 dark:text-white placeholder-gray-400 dark:placeholder-gray-500 transition-colors" %>
      </div>
    </div>
  </div>

  <!-- メモ -->
  <div>
    <%= form.label :notes, "メモ（任意）", class: "block text-sm font-bold text-gray-700 dark:text-gray-300 mb-2" %>
    <%= form.text_area :notes,
        rows: 5,
        placeholder: "今日の散歩の感想や気づいたことを記録しましょう...",
        class: "w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-sky-500 focus:border-transparent bg-white dark:bg-gray-700 text-gray-900 dark:text-white placeholder-gray-400 dark:placeholder-gray-500 transition-colors resize-none" %>
  </div>

  <!-- ボタン -->
  <div class="flex flex-col sm:flex-row gap-3 pt-4">
    <!-- 保存ボタン -->
    <%= form.submit class: "flex-1 bg-sky-500 dark:bg-sky-600 hover:bg-sky-600 dark:hover:bg-sky-700 text-white font-bold py-3 px-6 rounded-lg shadow-md transition-colors cursor-pointer" %>

    <!-- キャンセルボタン -->
    <%= link_to "キャンセル", walks_path,
        class: "flex-1 text-center bg-gray-300 dark:bg-gray-600 hover:bg-gray-400 dark:hover:bg-gray-500 text-gray-800 dark:text-gray-200 font-bold py-3 px-6 rounded-lg shadow-md transition-colors" %>
  </div>

<% end %>
