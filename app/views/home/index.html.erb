<% content_for :title, "てくメモ - ホーム" %>

<div class="flex-1 p-4 pb-24 w-full max-w-4xl mx-auto space-y-5">

  <!-- 今日の散歩ダッシュボード -->
  <div class="bg-gradient-to-br from-blue-500 to-indigo-600 text-white p-6 rounded-3xl shadow-lg relative overflow-hidden group">
    <div class="absolute top-0 right-0 p-4 opacity-10">
      <span class="material-symbols-outlined text-9xl group-hover:scale-110 transition-transform duration-500">directions_walk</span>
    </div>
    <div class="relative z-10">
      <div class="text-center mb-4">
        <p class="text-5xl font-bold tracking-tight">5,234<span class="text-xl font-medium ml-1">歩</span></p>
      </div>

      <!-- プログレスバー -->
      <div class="w-full bg-black/20 rounded-full h-3 mb-2">
        <div class="bg-gradient-to-r from-lime-300 to-green-400 h-3 rounded-full shadow-sm relative" style="width: 52%">
          <div class="absolute right-0 top-1/2 -translate-y-1/2 w-4 h-4 bg-white rounded-full shadow-md"></div>
        </div>
      </div>
      <p class="text-center text-sm opacity-90 mb-6">今日の目標: 8,000歩</p>

      <div class="grid grid-cols-2 gap-4 bg-white/10 rounded-2xl p-3 backdrop-blur-sm">
        <div class="text-center border-r border-white/20">
          <p class="text-lg font-bold">4.0 <span class="text-xs font-normal">km</span></p>
          <p class="text-xs opacity-80">距離</p>
        </div>
        <div class="text-center">
          <p class="text-lg font-bold">312 <span class="text-xs font-normal">kcal</span></p>
          <p class="text-xs opacity-80">消費カロリー</p>
        </div>
      </div>
    </div>
  </div>

  <!-- 天気予報とランキングのグリッド -->
  <div class="grid grid-cols-2 gap-4">
    <!-- 天気予報カード -->
    <div class="bg-gradient-to-br from-sky-400 to-blue-500 rounded-3xl shadow-md p-4 text-white flex flex-col justify-between aspect-square relative overflow-hidden group">
      <!-- 場所情報 -->
      <div class="flex items-center space-x-1 text-xs opacity-90">
        <span class="material-symbols-outlined text-sm">location_on</span>
        <span><%= @location_name || "東京" %></span>
      </div>

      <% if @weather && @weather[:today] %>
        <!-- 中央: アイコンと気温 -->
        <div class="flex flex-col items-center justify-center flex-1">
          <span class="material-symbols-outlined text-7xl drop-shadow-md group-hover:scale-110 transition-transform duration-300">
            <%= @weather[:today][:icon] %>
          </span>
          <p class="text-3xl font-bold mt-2"><%= @weather[:today][:temp] %>°C</p>
        </div>

        <!-- 下部: 説明 -->
        <div class="text-center">
          <p class="text-sm font-medium opacity-90"><%= @weather[:today][:description] %></p>
        </div>
      <% else %>
        <div class="flex flex-col items-center justify-center flex-1">
          <span class="material-symbols-outlined text-7xl opacity-50">cloud_off</span>
          <p class="text-sm opacity-80 mt-2">取得中...</p>
        </div>
      <% end %>
    </div>

    <!-- ランキングカード -->
    <div class="bg-gradient-to-br from-indigo-400 to-purple-500 rounded-3xl shadow-md p-4 text-white flex flex-col items-center justify-center aspect-square relative overflow-hidden group">

      <!-- 中央: トロフィーアイコン -->
      <div class="flex flex-col items-center justify-center flex-1">
        <span class="material-symbols-outlined text-8xl drop-shadow-md group-hover:rotate-12 transition-transform duration-300">trophy</span>
      </div>

      <!-- 下部: タイトルと順位 -->
      <div class="text-center">
        <h3 class="font-bold text-xl mb-1">ランキング</h3>
        <p class="text-sm opacity-90 bg-white/20 px-3 py-1 rounded-full">今週: 3位</p>
      </div>
    </div>
  </div>

  <!-- 最新の投稿 -->
  <div class="bg-gradient-to-br from-sky-400 to-blue-500 p-5 rounded-3xl shadow-md text-white relative overflow-hidden group cursor-pointer transition-transform hover:scale-[1.01]">
    <div class="flex justify-between items-start">
      <div>
        <h3 class="font-bold text-lg mb-1">最新の投稿</h3>
        <p class="text-sm opacity-90 line-clamp-2 leading-relaxed">
          週末のハイキング記録:<br>
          新しいルートを発見しました...
        </p>
      </div>
      <div class="flex items-center justify-center bg-white/20 w-8 h-8 rounded-full ml-2 flex-shrink-0">
        <span class="material-symbols-outlined text-sm">arrow_forward_ios</span>
      </div>
    </div>
  </div>

  <!-- メモ帳 -->
  <div class="bg-gradient-to-br from-blue-500 to-indigo-600 p-5 rounded-3xl shadow-md text-white relative overflow-hidden">
    <div class="flex justify-between items-end">
      <div>
        <h3 class="font-bold text-lg mb-2">メモ帳</h3>
        <span class="material-symbols-outlined text-5xl opacity-80 -ml-1 transform -rotate-12">note_stack</span>
      </div>
      <div>
        <button type="button" class="bg-white text-indigo-600 font-bold py-2 px-4 rounded-full shadow-md flex items-center space-x-1 hover:bg-gray-50 transition-colors">
          <span class="material-symbols-outlined text-lg">add</span>
          <span class="text-sm">メモを追加</span>
        </button>
        <p class="text-[10px] text-right mt-1 opacity-80">Google Keep に保存</p>
      </div>
    </div>
  </div>

  <!-- 今後のイベント -->
  <div class="bg-gradient-to-br from-purple-400 to-purple-500 p-4 rounded-3xl shadow-md text-white flex items-center justify-between">
    <div class="flex items-center space-x-3">
      <h3 class="font-bold text-lg">今後のイベント</h3>
    </div>
    <div class="bg-white/20 w-10 h-10 rounded-xl flex items-center justify-center">
      <span class="material-symbols-outlined text-2xl">calendar_month</span>
    </div>
  </div>

  <!-- 健康データ -->
  <div class="bg-gradient-to-br from-purple-400 to-purple-500 p-4 rounded-3xl shadow-md text-white flex items-center justify-between">
    <div class="flex items-center space-x-3">
      <h3 class="font-bold text-lg">健康データ</h3>
    </div>
    <div class="bg-white/20 w-10 h-10 rounded-xl flex items-center justify-center">
      <span class="material-symbols-outlined text-2xl">monitor_heart</span>
    </div>
  </div>

</div>
